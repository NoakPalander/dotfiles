monitor = HDMI-0

[bar/center]
inherit = bar/master
monitor = DP-4

[bar/right]
inherit = bar/master
monitor = DVI-D-0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %{F#fff}%name%%{F-}
label-focused-background = ${colors.background}
label-focused-underline= ${colors.blue}
label-focused-padding = 2

label-unfocused = %{F#aaa}%name%%{F-}
label-unfocused-padding = 2
label-unfocused-background = ${colors.background}

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.background-alt}
label-visible-padding = ${self.label-focused-padding}

label-urgent = ${self.label-focused}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-separator-background = ${colors.background-mod}
label-separator-foreground = ${colors.foreground-alt}

ws-icon-0 = I
ws-icon-1 = II
ws-icon-2 = III
ws-icon-3 = IV
ws-icon-4 = V
ws-icon-5 = VI
ws-icon-6 = VII
ws-icon-7 = VIII
ws-icon-8 = IX
ws-icon-9 = X

[module/vpn]
type = custom/script
exec = ~/Scripts/protonvpn/protonvpn
interval = 5
env-disconnected_fmt = "VPN: (${Status})"
env-connected_fmt = "VPN: ${IP} | K.S (${Kill Switch}) - ${Server}"

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
fixed-values = true
format-mounted = <label-mounted>
format-mounted-prefix = üíæ
format-mounted-prefix-foreground = ${colors.orange}
format-mounted-background = ${colors.background}
format-mounted-padding = 2
label-mounted = " %used%/%total% (%percentage_used%%)"

[module/memory]
type = internal/memory
interval = 1
format = <label>
format-prefix = "üêè "
format-prefix-foreground = ${colors.purple}
format-background = ${colors.background}
format-padding = 2
label = "%gb_used%/%total% (%percentage_used%%)"

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
format-prefix = "CPU: "
format-prefix-foreground = ${colors.green}
format-background = ${colors.background2}
format-padding = 2
label = "%percentage%%"

[module/title]
type = internal/xwindow
format = <label>
format-prefix = ""
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2
label = " %title%"
label-maxlen = 30
label-empty = " Desktop"

[module/headset]
type = custom/script
